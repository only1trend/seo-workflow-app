                    </div>

                    <div class="btn-row">
                        <button class="btn btn-primary" type="button" onclick="saveApiKey()">
                            üîê Save API key
                        </button>
                        <button class="btn btn-ghost" type="button" onclick="window.open('https://aistudio.google.com/apikey', '_blank')">
                            üåê Open Google AI Studio
                        </button>
                    </div>

                    <div id="apiStatus" class="success-banner hidden"></div>
                </div>

                <div id="inputSection" class="form-grid hidden" aria-hidden="true">
                    <div class="form-group">
                        <div class="label-row">
                            <label class="form-label" for="niche">Target niche / topic</label>
                            <span class="label-hint">Describe it like you would to a client</span>
                        </div>
                        <input
                            type="text"
                            id="niche"
                            class="form-control"
                            placeholder="e.g., healthy lunch recipes for busy professionals"
                            autocomplete="off"
                        />
                    </div>

                    <div class="form-group">
                        <div class="label-row">
                            <label class="form-label" for="contentCountRange">Existing content volume</label>
                            <span class="label-hint" id="contentCountLabel">0 pieces</span>
                        </div>
                        <div class="range-row">
                            <input
                                type="range"
                                id="contentCountRange"
                                min="0"
                                max="30"
